{
  "name": "simple-masonry",
  "version": "1.0.6",
  "description": "Simple Masonry effect for responsive columns. Works great with bootstrap.",
  "author": "Christian Heyn <chris.heyn.dd@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/christianheyn/simple-masonry.js.git"
  },
  "main": "dist/simple-masonry.min.js",
  "license": "MIT",
  "devDependencies": {
    "babel": "^6.3.26",
    "babel-cli": "^6.4.5",
    "babel-core": "^6.4.5",
    "babel-preset-es2015": "^6.3.13",
    "babelify": "^7.3.0",
    "bootstrap": "*",
    "browserify": "^13.0.1",
    "chai": "^3.2.0",
    "jscs": "^3.0.4",
    "jshint": "^2.8.0",
    "mkdirp": "^0.5.1",
    "mocha": "^2.2.5",
    "mocha-phantomjs": "^4.0.2",
    "phantomjs-prebuilt": "^2.1.7",
    "uglify-js": "^2.6.1"
  },
  "keywords": [
    "masonry",
    "columns",
    "responsive",
    "layout",
    "bootstrap"
  ],
  "scripts": {
    "test": "npm run jshint && mocha-phantomjs tests/index.html",
    "postinstall": "npm run dist && npm test",
    "watch:js": "watch-run -p 'js/**/*.js' npm run browserify",
    "browserify": "browserify js/simple-masonry.js -o dist/simple-masonry.js -t [ babelify --presets [ es2015 ] ]",
    "jshint": "jshint js/simple-masonry.js",
    "uglify": "uglifyjs -c -m -- dist/simple-masonry.js > dist/simple-masonry.min.js",
    "dist": "mkdirp dist && npm run browserify && npm run uglify"
  }
}
