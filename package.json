{
  "name": "simple-masonry.js-site",
  "version": "1.0.0",
  "description": "demo-site fpr simple-masonry.js",
  "author": "Christian Heyn <chris.heyn.dd@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "bootstrap-sass": "^3.3.5",
    "copyfiles": "^0.2.1",
    "font-awesome": "^4.5.0",
    "node-sass": "^3.3.2",
    "simple-masonry.js": "git+http://gitlab.synbackend.com:ChristianHeyn/simple-masonry.js.git",
    "uglifyjs": "^2.4.10",
    "watch-run": "^1.2.2"
  },
  "scripts": {
    "vendor": "npm run vendor:simple-masonry.js && npm run vendor:font-awesome",
    "vendor:simple-masonry.js": "copyfiles -f node_modules/simple-masonry.js/js/simple-masonry-compiled.js js/vendor",
    "vendor:font-awesome": "copyfiles -f node_modules/font-awesome/fonts/* fonts",
    "scss:compile": "node-sass style/scss/main.scss 'style/css/main.css' --output",
    "scss:watch": "watch-run -p 'style/scss/**/*.scss' npm run scss:compile",
    "js:concat": "cat js/vendor/*.js js/partials/*.js > js/script.js",
    "js:uglify": "cat js/script.js | uglifyjs > js/script.min.js",
    "js:watch": "watch-run -p 'js/*/*.js' npm run js:concat",
    "watchAll": "npm run js:watch & npm run scss:watch"
  }
}
