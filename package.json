{
  "name": "simple-masonry",
  "version": "2.0.0",
  "description": "Simple Masonry effect for responsive columns. Works great with bootstrap.",
  "main": "dist/simple-masonry.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/christianheyn/simple-masonry.js.git"
  },
  "license": "MIT",
  "keywords": [
    "masonry",
    "columns",
    "responsive",
    "layout",
    "bootstrap"
  ],
  "scripts": {
    "test": "npm run lint:js && npm run lint:js:test && mocha-phantomjs test/index.html",
    "postinstall": "npm run browserify && npm run browserify:test && npm run compile:scss",
    "compile:scss": "node-sass style/scss/main.scss 'dist/css/app.css' --output",
    "browserify": "browserify js/simple-masonry.js -o dist/js/simple-masonry.js -t [ babelify --presets [ es2015 ] ]",
    "browserify:test": "browserify test/js/test.js -o test/dist/js/test.js -t [ babelify --presets [ es2015 ] ]",
    "watch:scss": "watch-run -p 'style/scss/**/*.scss' 'npm run compile:scss'",
    "watch:js": "watch-run -p 'js/*.js' npm run browserify",
    "watch:js:test": "watch-run -p 'test/js/**/*.js' npm run browserify:test",
    "watch:all": "npm run watch:scss & npm run watch:js & npm run watch:js:test",
    "analyse:css": "parker dist/css/app.css",
    "lint:js": "eslint js/**/*.js",
    "lint:js:test": "eslint test/js/**/*.js"
  },
  "author": "Christian Heyn",
  "license": "ISC",
  "dependencies": {
    "normalize.scss": "^0.1.0"
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.9.0",
    "babel-core": "^6.9.1",
    "babel-preset-es2015": "^6.9.0",
    "babelify": "^7.3.0",
    "browserify": "^13.0.0",
    "chai": "^3.5.0",
    "eslint": "^2.12.0",
    "mocha": "^2.5.3",
    "mocha-phantomjs": "^4.0.2",
    "node-sass": "^3.4.2",
    "parker": "0.0.10",
    "phantomjs-prebuilt": "^2.1.7",
    "uglify-js": "^2.6.2",
    "watch-run": "^1.2.4"
  }
}
