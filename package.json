{
  "name": "simple-masonry",
  "version": "1.0.6",
  "description": "Show items with different height in a grid of responsive columns. Works great with bootstrap.",
  "author": "Christian Heyn <chris.heyn.dd@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/christianheyn/simple-masonry.js.git"
  },
  "main": "dist/simple-masonry.min.js",
  "license": "MIT",
  "devDependencies": {
    "babel": "^6.3.26",
    "babel-cli": "^6.4.5",
    "babel-core": "^6.4.5",
    "babel-preset-es2015": "^6.3.13",
    "bootstrap": "*",
    "chai": "^3.2.0",
    "jscs": "^3.0.4",
    "jshint": "^2.8.0",
    "mkdirp": "^0.5.1",
    "mocha": "^2.2.5",
    "mocha-phantomjs": "^4.0.2",
    "phantomjs-prebuilt": "^2.1.7",
    "uglify-js": "^2.6.1"
  },
  "keywords": [
    "masonry",
    "columns",
    "responsive",
    "layout",
    "bootstrap"
  ],
  "scripts": {
    "test": "mocha-phantomjs tests/index.html",
    "postinstall": "npm run dist && npm test",
    "babel": "babel js/simple-masonry.js --out-file dist/simple-masonry.js",
    "babel:watch": "babel js/simple-masonry.js --watch --out-file dist/simple-masonry.js",
    "jshint": "jshint js/simple-masonry.js",
    "uglify": "uglifyjs -c -m -- dist/simple-masonry.js > dist/simple-masonry.min.js",
    "dist": "mkdirp dist && npm run babel && npm run uglify"
  }
}
