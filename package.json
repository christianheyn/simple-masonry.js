{
  "name": "simple-masonry.js-site",
  "version": "1.0.0",
  "description": "demo-site for simple-masonry.js",
  "author": "Christian Heyn <chris.heyn.dd@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "bootstrap-sass": "^3.3.5",
    "copyfiles": "^0.2.1",
    "font-awesome": "^4.5.0",
    "highlight.js": "^9.2.0",
    "node-sass": "^3.3.2",
    "simple-masonry": "^1.0.6",
    "uglifyjs": "^2.4.10",
    "watch-run": "^1.2.2"
  },
  "scripts": {
    "vendor": "npm run vendor:font-awesome && npm run vendor:font-awesome",
    "vendor:font-awesome": "copyfiles -f node_modules/font-awesome/fonts/* fonts",
    "vendor:highlight.css": "copyfiles -f node_modules/highlight.js/styles/monokai.css style/css",
    "scss:compile": "node-sass style/scss/main.scss 'style/css/main.css' --output",
    "scss:watch": "watch-run -p 'style/scss/**/*.scss' npm run scss:compile",
    "js:build": "browserify js/main.js -o js/script.js",
    "js:uglify": "cat js/script.js | uglifyjs > js/script.min.js",
    "js:watch": "watch-run -p 'js/*/*.js' npm run js:build",
    "watchAll": "npm run js:watch & npm run scss:watch"
  }
}
